<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60.0dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="153.0dip" >

            <ImageView
                android:id="@id/imgv_p_snews_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txtv_p_notice_id"
                android:layout_width="fill_parent"
                android:layout_height="25.0dip"
                android:layout_alignBottom="@id/imgv_p_snews_id"
                android:background="@color/public_black_color"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/public_white_color"
                android:textStyle="bold" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listv_p_notice_id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/rlayout_top_id"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@drawable/setup_top_bg" >

        <Button
            android:id="@id/btn_p_school_back_id"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9.0dip"
            android:layout_marginRight="9.0dip"
            android:background="@drawable/btn_back_selector" />

        <TextView
            android:id="@+id/tv_schoolname"
            android:layout_width="wrap_content"
            android:layout_height="34.0dip"
            android:layout_centerVertical="true"
            android:layout_marginTop="9.0dip"
            android:layout_toRightOf="@id/btn_p_school_back_id"
            android:gravity="right|center"
            android:paddingLeft="3.0dip"
            android:shadowColor="@color/public_black_color"
            android:shadowDx="1.0"
            android:shadowRadius="2.0"
            android:text="@string/app_school_name_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/t_main_top_txtv_24_dimens"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>