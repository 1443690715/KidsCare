            android:text="@string/p_top_title_shop_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/t_main_top_txtv_28_dimens"
            android:textStyle="bold" />

        <Button
            android:id="@id/btn_p_activity_back_id"
