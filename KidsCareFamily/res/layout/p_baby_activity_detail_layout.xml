<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60.0dip"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@id/imgv_pba_lv_item_icon_id"
            android:layout_width="240.0dip"
            android:layout_height="150.0dip"
            android:layout_marginTop="15.0dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="13.0dip"
            android:background="@drawable/p_sabout_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="@string/p_baby_activity_detail_title_string"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />

            <TextView
                android:id="@id/txtv_pba_detail_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="学习喝水"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/p_sabout_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="@string/p_baby_activity_detail_teacher_string"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />

            <TextView
                android:id="@id/txtv_pba_detail_teacher_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="刘德华老师"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/p_sabout_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="@string/p_baby_activity_detail_class_string"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />

            <TextView
                android:id="@id/txtv_pba_detail_class_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="小班"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/p_sabout_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="@string/p_baby_activity_detail_date_string"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />

            <TextView
                android:id="@id/txtv_pba_detail_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="2014-03-01"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/p_sabout_item_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:text="@string/p_baby_activity_detail_content_string"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@id/txtv_pba_detail_content_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.0dip"
                        android:text="在爸爸帮助下学会喝水"
                        android:textColor="@color/public_black_color"
                        android:textSize="@dimen/setup_backmsg_txtv_16_dimens" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@drawable/t_class_top_bg" >

        <Button
            android:id="@id/btn_p_activity_detail_back_id"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9.0dip"
            android:layout_marginRight="9.0dip"
            android:background="@drawable/btn_back_selector" />

        <TextView
            android:layout_width="160.0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70.0dip"
            android:gravity="right|center"
            android:paddingLeft="3.0dip"
            android:shadowColor="@color/public_black_color"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="@string/p_top_title_dear_activity_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/t_main_top_txtv_28_dimens"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>