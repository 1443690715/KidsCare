<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="61.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9.0dip"
                android:background="@drawable/t_remind_count_people_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="2.0dip"
                android:paddingTop="2.0dip" >

                <TextView
                    android:id="@+id/tv_babyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="7.0dip"
                    android:text="@string/t_dynamic_count_people_string"
                    android:textColor="@color/public_white_color"
                    android:textSize="@dimen/parents_main_txtv_top_22_dimens"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_more"
                        android:layout_width="35.0dip"
                        android:layout_height="33.0dip"
                        android:layout_weight="0.24"
                        android:text="查看详情"
                        android:textSize="11dp" />

                    <Button
                        android:id="@+id/btn_reelect"
                        android:layout_width="35.0dip"
                        android:layout_height="25.0dip"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginRight="7.0dip"
                        android:background="@drawable/btn_select_again_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100.0dip"
                android:layout_marginLeft="9.0dip"
                android:layout_marginRight="9.0dip"
                android:background="@color/public_white_color"
                android:orientation="horizontal"
                android:paddingLeft="9.0dip" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9.0dip"
                    android:background="@color/public_white_color"
                    android:gravity="center"
                    android:orientation="vertical" >
                </RelativeLayout>

                <!-- <ImageView -->
                <!-- android:layout_width="50.0dip" -->
                <!-- android:layout_height="50.0dip" -->
                <!-- android:scaleType="fitXY" -->
                <!-- android:src="@drawable/t_dynamic_more_icon" /> -->

                <Button
                    android:id="@+id/btn_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加照片" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginTop="9.0dip"
                    android:background="@color/public_white_color"
                    android:gravity="center"
                    android:orientation="vertical" >
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginTop="9.0dip"
                    android:background="@color/public_white_color"
                    android:gravity="center"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginTop="9.0dip"
                    android:background="@color/public_white_color"
                    android:gravity="center"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginTop="9.0dip"
                    android:background="@color/public_white_color"
                    android:gravity="center"
                    android:orientation="vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.0dip"
                android:layout_marginRight="9.0dip"
                android:background="@drawable/t_remind_middle_bottom_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9.0dip"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ib_dynamicselection"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/t_dynamic_middle_choic_bg"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/t_dynamic_detail_layout_B5F002_color"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_cf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="吃饭" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <HorizontalScrollView
                                android:id="@+id/scrollview_cf"
                                android:layout_width="fill_parent"
                                android:layout_height="35dp" >

                                <RadioGroup
                                    android:id="@+id/radio_group_cf"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >
                                </RadioGroup>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/t_dynamic_detail_layout_B5F002_color"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_sj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="睡觉" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <HorizontalScrollView
                                android:id="@+id/scrollview_sj"
                                android:layout_width="fill_parent"
                                android:layout_height="35dp" >

                                <RadioGroup
                                    android:id="@+id/radio_group_sj"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >
                                </RadioGroup>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/t_dynamic_detail_layout_B5F002_color"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_tw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="体温" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <HorizontalScrollView
                                android:id="@+id/scrollview_tw"
                                android:layout_width="fill_parent"
                                android:layout_height="35dp" >

                                <RadioGroup
                                    android:id="@+id/radio_group_tw"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >
                                </RadioGroup>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/t_dynamic_detail_layout_B5F002_color"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_qx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="情绪" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <HorizontalScrollView
                                android:id="@+id/scrollview_qx"
                                android:layout_width="fill_parent"
                                android:layout_height="35dp" >

                                <RadioGroup
                                    android:id="@+id/radio_group_qx"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >
                                </RadioGroup>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/t_dynamic_detail_layout_B5F002_color"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_db"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="大便" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <HorizontalScrollView
                                android:id="@+id/scrollview_db"
                                android:layout_width="fill_parent"
                                android:layout_height="35dp" >

                                <RadioGroup
                                    android:id="@+id/radio_group_db"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >
                                </RadioGroup>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginRight="9.0dip"
                    android:layout_marginTop="9.0dip"
                    android:background="@drawable/t_remind_input_bg"
                    android:orientation="vertical"
                    android:paddingLeft="7.0dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7.0dip"
                        android:text="@string/t_dynamic_teacher_say_string"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_evaluate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:background="@null"
                        android:gravity="top|left|center"
                        android:hint="@string/t_dynamic_teacher_default_say_string"
                        android:textColor="@color/setup_about_txtv_999999_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/rlayout_top_id"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@drawable/t_message_top_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left|center"
            android:paddingLeft="3.0dip"
            android:shadowColor="@color/public_black_color"
            android:shadowDx="1.0"
            android:shadowRadius="2.0"
            android:text="@string/p_top_title_baby_dynamic_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/t_main_top_txtv_24_dimens"
            android:textStyle="bold" />

        <Button
            android:id="@id/btn_t_remind_detail_send_id"
            android:layout_width="90.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7.0dip"
            android:background="@drawable/btn_send_parents_selector" />
    </RelativeLayout>

</RelativeLayout>