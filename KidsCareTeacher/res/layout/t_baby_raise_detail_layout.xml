<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="61.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.0dip"
                android:text="@string/hello_world"
                android:textSize="@dimen/t_bnd_txtv_type_20_dimens"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="适合：大班" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="2014-11-26" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1.0dip"
                android:layout_marginTop="9.0dip"
                android:background="@drawable/divider_line" />

            <ImageView
                android:layout_width="260.0dip"
                android:layout_height="220.0dip"
                android:layout_marginTop="5.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip"
                android:layout_marginRight="13.0dip"
                android:layout_marginTop="9.0dip"
                android:text="@string/setup_about_company_string" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/rlayout_top_id"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@drawable/t_message_top_bg" >

        <Button
            android:id="@id/btn_t_raise_detail_back_id"
            android:layout_width="70.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9.0dip"
            android:background="@drawable/btn_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left|center"
            android:paddingLeft="3.0dip"
            android:shadowColor="@color/public_black_color"
            android:shadowDx="1.0"
            android:shadowRadius="2.0"
            android:text="@string/p_top_title_baby_dynamic_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/t_main_top_txtv_24_dimens"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>