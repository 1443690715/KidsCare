<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/rlayout_top_id"
            android:layout_width="fill_parent"
            android:layout_height="64.0dip"
            android:background="@drawable/t_message_top_bg" >

            <Button
                android:id="@id/btn_t_message_back_id"
                android:layout_width="80.0dip"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.0dip"
                android:background="@drawable/btn_back_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_t_message_back_id"
                android:gravity="left|center"
                android:paddingLeft="3.0dip"
                android:shadowColor="@color/public_black_color"
                android:shadowDx="1.0"
                android:shadowRadius="2.0"
                android:text="@string/t_top_title_message_string"
                android:textColor="@color/public_white_color"
                android:textSize="@dimen/t_main_top_txtv_28_dimens"
                android:textStyle="bold" />

            <Button
                android:id="@id/btn_t_main_quit_id"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7.0dip"
                android:background="@drawable/btn_replace_all_selector" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_familymsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</RelativeLayout>