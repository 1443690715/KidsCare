<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.0dip"
        android:layout_marginRight="9.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/p_tm_icon_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/imgv_ptm_icon_to_id"
                android:layout_width="33.0dip"
                android:layout_height="30.0dip"
                android:layout_marginTop="2.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon" />

            <TextView
                android:id="@id/txtv_ptm_to_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/t_main_showname_txtv_12_dimens" />

            <TextView
                android:id="@id/txtv_ptm_to_who_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/setup_about_txtv_333333_color"
                android:textSize="@dimen/p_tm_txtv_10_dimens" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatfrom_bg_normal"
            android:orientation="vertical" >

            <TextView
                android:id="@id/txtv_ptm_to_message_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3.0dip"
                android:text="@string/setup_about_company_string"
                android:textColor="@color/setup_about_txtv_333333_color"
                android:textSize="@dimen/t_main_showname_txtv_12_dimens" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.0dip"
        android:layout_marginRight="9.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/chatto_bg_normal"
            android:orientation="vertical" >

            <TextView
                android:id="@id/txtv_ptm_from_message_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3.0dip"
                android:text="@string/setup_about_company_string"
                android:textColor="@color/setup_about_txtv_333333_color"
                android:textSize="@dimen/t_main_showname_txtv_12_dimens" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/p_tm_icon_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/imgv_ptm_from_icon_id"
                android:layout_width="33.0dip"
                android:layout_height="30.0dip"
                android:layout_marginTop="2.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon" />

            <TextView
                android:id="@id/txtv_ptm_from_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/public_black_color"
                android:textSize="@dimen/t_main_showname_txtv_12_dimens" />

            <TextView
                android:id="@id/txtv_ptm_from_who_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/setup_about_txtv_333333_color"
                android:textSize="@dimen/p_tm_txtv_10_dimens" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>