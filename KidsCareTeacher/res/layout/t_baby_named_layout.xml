<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="180.0dip"
            android:background="@drawable/t_bn_right_bg"
            android:orientation="vertical"
            android:paddingLeft="5.0dip"
            android:paddingTop="3.0dip"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txtv_count_right_id"
                android:layout_width="wrap_content"
                android:layout_height="34.0dip"
                android:layout_margin="4.0dip"
                android:gravity="center"
                android:paddingLeft="3.0dip"
                android:shadowColor="@color/public_black_color"
                android:shadowDx="2.0"
                android:shadowRadius="1.0"
                android:text="@string/t_bn_right_sign_0_string"
                android:textColor="@color/t_bnd_txtv_right_99CC00_color"
                android:textSize="@dimen/t_bnd_txtv_top_18_dimens"
                android:textStyle="bold" />

            <ListView
                android:id="@id/listv_tbnd_right_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="5.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/t_bn_left_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="3.0dip"
                android:paddingTop="3.0dip" >

                <TextView
                    android:id="@id/txtv_tbnd_left_id"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingLeft="3.0dip"
                    android:shadowColor="@color/public_black_color"
                    android:shadowDx="1.0"
                    android:shadowRadius="1.0"
                    android:text="@string/t_bn_left_no_sign_0_string"
                    android:textColor="@color/public_white_color"
                    android:textSize="@dimen/t_bnd_txtv_top_17_dimens"
                    android:textStyle="bold" />

                <Button
                    android:id="@id/btn_tbnd_select_all_id"
                    android:layout_width="40.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/btn_select_all_selector" />

                <Button
                    android:id="@id/btn_tbnd_sign_id"
                    android:layout_width="40.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/btn_sign_selector"
                    android:visibility="gone" />
            </LinearLayout>

            <ListView
                android:id="@id/listv_tbnd_left_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="5.0dip"
                android:paddingRight="3.0dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rlayout_top_id"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@drawable/t_bn_top_bg" >

        <TextView
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="70.0dip"
            android:layout_marginTop="7.0dip"
            android:gravity="left|center"
            android:paddingLeft="3.0dip"
            android:shadowColor="@color/public_black_color"
            android:shadowDx="2.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="@string/t_bn_top_title_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/t_main_top_txtv_28_dimens"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="11.0dip"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="这才是真正的文字跑马灯效果"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <Button
            android:id="@id/btn_tbnd_save_id"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9.0dip"
            android:background="@drawable/btn_save_selector" />
    </RelativeLayout>

</RelativeLayout>