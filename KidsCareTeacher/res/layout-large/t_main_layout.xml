<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/t_main_bg"
    android:orientation="vertical" >

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@id/llayout_t_middle_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64.0dip"
                android:background="@drawable/t_middle_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/txtv_t_main_teachername_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9.0dip"
                    android:gravity="left|center"
                    android:text="您好，张老师！"
                    android:textColor="@color/t_main_middle_text_color"
                    android:textSize="@dimen/login_txt_uname_pwd_14_dimes" />
            </LinearLayout>

            <RelativeLayout
                android:id="@id/rlayout_top_id"
                android:layout_width="fill_parent"
                android:layout_height="64.0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/t_top_bg" >

                <TextView
                    android:id="@id/txtv_t_main_schoolname_id"
                    android:layout_width="170.0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60.0dip"
                    android:layout_marginTop="9.0dip"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingBottom="2.0dip"
                    android:paddingRight="13.0dip"
                    android:shadowColor="@color/public_black_color"
                    android:shadowDx="2.0"
                    android:shadowRadius="1.0"
                    android:singleLine="true"
                    android:text="重庆人和桥幼儿园"
                    android:textColor="@color/public_white_color"
                    android:textSize="@dimen/parents_main_txtv_top_22_dimens"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60.0dip"
                    android:layout_marginTop="11.0dip"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="这才是真正的文字跑马灯效果"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@id/btn_t_main_quit_id"
                    android:layout_width="80.0dip"
                    android:layout_height="40.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9.0dip"
                    android:background="@drawable/btn_quit_selector" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_x="0.0dip"
            android:layout_y="146.0dip"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="533.0dip"
                android:background="@drawable/t_main_bg"
                android:orientation="vertical"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43.0dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@id/btn_t_main_bnamed_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_t_bname_selector" />

                    <Button
                        android:id="@id/btn_t_main_bdynamic_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:background="@drawable/btn_t_bdynamic_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@id/btn_t_main_class_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_t_class_selector" />

                    <Button
                        android:id="@id/btn_t_main_raise_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:background="@drawable/btn_t_raise_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@id/btn_t_main_service_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_t_service_selector" />

                    <Button
                        android:id="@id/btn_t_main_message_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:background="@drawable/btn_t_message_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@id/btn_t_main_remind_id"
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_t_remind_selector" />

                    <Button
                        android:layout_width="142.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:background="#00000000" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </AbsoluteLayout>

    <Button
        android:id="@id/btn_t_main_setup_id"
        android:layout_width="80.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="9.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/btn_setup_selector" />

</RelativeLayout>