<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/p_dynamic_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="61.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9.0dip"
                android:background="@drawable/t_remind_count_people_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="2.0dip"
                android:paddingTop="2.0dip" >

                <TextView
                    android:id="@+id/tv_replyno_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="7.0dip"
                    android:textColor="@color/public_white_color"
                    android:textSize="@dimen/parents_main_txtv_top_22_dimens"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="33.0dip"
                    android:text="查看详情"
                    android:textSize="11dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100.0dip"
                android:layout_marginLeft="9.0dip"
                android:layout_marginRight="9.0dip"
                android:background="@color/public_white_color"
                android:orientation="horizontal"
                android:paddingLeft="9.0dip" >

                <TextView
                    android:id="@+id/tv_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_stuhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.0dip"
                android:layout_marginRight="9.0dip"
                android:background="@drawable/t_remind_middle_bottom_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9.0dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginRight="9.0dip"
                    android:layout_marginTop="9.0dip"
                    android:background="@drawable/t_remind_input_bg"
                    android:orientation="vertical"
                    android:paddingLeft="7.0dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7.0dip"
                        android:text="@string/t_dynamic_teacher_replycontent_string"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_evaluate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:background="@null"
                        android:gravity="top|left|center"
                        android:hint="@string/t_dynamic_teacher_default_reply_string"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:textColor="@color/setup_about_txtv_999999_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/rlayout_top_id"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@drawable/t_message_top_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left|center"
            android:paddingLeft="3.0dip"
            android:shadowColor="@color/public_black_color"
            android:shadowDx="1.0"
            android:shadowRadius="2.0"
            android:text="@string/p_top_title_replyall_string"
            android:textColor="@color/public_white_color"
            android:textSize="@dimen/activity_vertical_margin"
            android:textStyle="bold" />

        <Button
            android:id="@id/btn_t_remind_detail_send_id"
            android:layout_width="90.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7.0dip"
            android:background="@drawable/btn_send_parents_selector" />

        <Button
            android:id="@id/btn_t_message_back_id"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/btn_back_selector" />
    </RelativeLayout>

</RelativeLayout>